    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.7",
    "chai": "^4.4.1",
    "ethers": "^6.12.0",
    "hardhat": "^2.22.1",
    "tsconfig-paths": "^4.2.0",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.1",
    "typescript": "^5.4.5"
  }
